<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="specFlow" type="TechTalk.SpecFlow.Configuration.ConfigurationSectionHandler, TechTalk.SpecFlow" />
  </configSections>
  <log4net>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="./Log/pegasus.Automation.log" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyyMMdd" />
      <maxSizeRollBackups value="-1" />
      <maximumFileSize value="3MB" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value=" T: %d |L: %p |TH: %t |L: %c{2} |MSG: %m %n" />
      </layout>
      <filter type="log4net.Filter.LevelMatchFilter">
        <LevelToMatch value="error" />
      </filter>
      <filter type="log4net.Filter.LevelMatchFilter">
        <LevelToMatch value="info" />
      </filter>
      <filter type="log4net.Filter.LevelMatchFilter">
        <LevelToMatch value="debug" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
    </appender>
    <root>
      <level value="info" />
      <appender-ref ref="RollingFile" />
    </root>
    <logger name="Pegasus.Automation">
      <level value="All" />
      <appender-ref ref="RollingFile" />
    </logger>
  </log4net>
  <specFlow>
    <unitTestProvider name="MsTest" />
    <!-- For additional details on SpecFlow configuration options see http://go.specflow.org/doc-config -->
  </specFlow>
  <appSettings>    
    <!--Remote Configuration-->
    <add key="isRemote" value="false" />
    <add key="remoteHubUrl" value="http://jenkins.imfinity.net:4444/wd/hub" />

    <!--Internet Explorer, FireFox, GoogleChrome and Safari-->
    <add key="Browser" value="Internet Explorer" />
    <!--ST, VM, PROD, PPE, DEV and VCD-->
    <!-- Please change the values for Execution Environment /-->
    <add key="TestEnvironment" value="ST"/>
    
    <!-- ST Url /-->
    <add key="CourseSpaceURLRootST" value="http://st.56school2.excelindia.com/pegasus/" />
    <add key="WorkSpaceURLRootST" value="http://ph.ws.st.56school2.excelindia.com/pegasus/" />
    <add key="RUMBAAdminURLRootST" value="https://sso.rumba.int.pearsoncmg.com/sso/login?service=http%3A%2F%2Fradmin.rumba.int.pearsoncmg.com%2F" />

    <!-- VM Url /-->
    <add key="CourseSpaceURLRootVM" value="http://school2.qa.pegasus.pearsoncmg.com/Pegasus/" />
    <add key="WorkSpaceURLRootVM" value=" http://cg.ws.school2.qa.pegasus.pearsoncmg.com/Pegasus/" />
    <add key="RUMBAAdminURLRootVM" value="https://sso.rumba.int.pearsoncmg.com/sso/login?service=http%3A%2F%2Fradmin.rumba.int.pearsoncmg.com%2F" />

    <!-- PROD URL /-->
    <add key="CourseSpaceURLRootPROD" value="https://school.pearsoned.com/Pegasus/" />
    <add key="WorkSpaceURLRootPROD" value="http://ph.ws.st.56school2.excelindia.com/pegasus/" />
    <add key="RUMBAAdminURLRootPROD" value="https://sso.rumba.int.pearsoncmg.com/sso/login?service=http%3A%2F%2Fradmin.rumba.int.pearsoncmg.com%2F" />

    <!-- VCD URL /-->
    <add key="CourseSpaceURLRootVCD" value=" http://school2pegasusqavcd.ecollege-labs.com/pegasus/" />
    <add key="WorkSpaceURLRootVCD" value="http://cgwsschool2pegasusqavcd.ecollege-labs.com/pegasus/" />
